<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.mealplanning.MealPlanningFragment">

    <!-- Meals per Day -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meals per Day"
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/spinner_meals_per_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/meals_per_day_options" />

    <!-- Allergies -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Allergies"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/spinner_allergies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/allergies_options" />

    <!-- Diets -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diets"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/spinner_diets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/diets_options" />

    <!-- Daily Calorie Budget -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daily Calorie Budget"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/spinner_calorie_min"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/calorie_min_options" />

    <Spinner
        android:id="@+id/spinner_calorie_max"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/calorie_max_options"
        android:layout_marginBottom="16dp" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/submit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Generate Meal Plan"
        android:layout_marginBottom="16dp" />

    <!-- RecyclerView for Meal Plan -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mealPlanRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical" />
</LinearLayout>
